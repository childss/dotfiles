[user]
	name = Stuart Childs
	email = stuart@childs.io
[diff]
[color]
    ui = auto

[hub]
protocol = https

[credential]
helper = /opt/boxen/bin/boxen-git-credential

[core]
excludesfile = /opt/boxen/config/git/gitignore
	autocrlf = input

[alias]
    st = status
    co = checkout
    amend = commit --amend
    aa = add --all
    pom = push origin master
    ff = merge --ff-only

    l = "!. ~/.githelpers && pretty_git_log"

[merge]
    tool = vimdiff
[push]
	default = simple
